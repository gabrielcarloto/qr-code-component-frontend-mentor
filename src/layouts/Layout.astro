---
import "@fontsource/outfit/variable.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Frontend Mentor</title>
  </head>
  <body>
    <slot />
  </body>
  <style is:global>
    :root {
      font-size: 62.5%;

      --background-color: rgb(212, 224, 238);
      --foreground-color: rgb(255, 255, 255);
      --heading-color: rgb(31, 49, 79);
      --text-on-foreground: rgb(125, 136, 158);
      --primary-color: rgb(44, 125, 250);
      --primary-hover: rgb(54, 133, 255);
    }

    /**
     * RESET
     */

    blockquote,
    dl,
    dd,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    hr,
    figure,
    p,
    pre {
      margin: 0;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-size: inherit;
      font-weight: inherit;
    }

    ol,
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    img,
    svg,
    video,
    canvas,
    audio,
    iframe,
    embed,
    object {
      display: block;
      vertical-align: middle;
    }

    *,
    ::before,
    ::after {
      margin: 0;
      padding: 0;
      border-width: 0;
      border-style: solid;
    }

    body {
      font-family: OutfitVariable, sans-serif;
      font-weight: normal;
      font-size: 1.5rem;
      line-height: 1.9rem;
      color: var(--text-on-foreground);

      width: 100vw;
      height: 100vh;
      display: grid;
      place-items: center;

      background-color: var(--background-color);
    }

    h1 {
      color: var(--heading-color);
      font-weight: 700;
      font-size: 2.2rem;
      line-height: 2.8rem;
      text-align: center;
    }

    .transclude-shadow-container {
      display: none; /* fix for firefox */
    }
  </style>
</html>
